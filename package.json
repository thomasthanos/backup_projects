{
  "name": "backup-manager",
  "version": "1.0.0",
  "description": "Backup Manager for MakeYourLifeEasier",
  "author": "ThomasThanos <thomasthanos2@icloud.com>",
  "main": "main.js",
  "scripts": {
    "prestart": "cmd /c cls",
    "start": "electron .",
    "prebuild": "cmd /c cls",
    "build": "electron-builder"
  },
  "dependencies": {
    "diff": "^5.1.0",
    "diff2html": "^3.4.45",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.thomasthanos.backup",
    "productName": "Backup-projects",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "icon": "backup.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "warningsAsErrors": false,
      "oneClick": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Project Backup",
      "installerIcon": "backup.ico",
      "uninstallerIcon": "backup.ico",
      "installerHeader": "backup.ico",
      "installerHeaderIcon": "backup.ico",
      "include": "installer.nsh",
      "artifactName": "backup_project_installer.${ext}"
    },
    "portable": {
      "artifactName": "backup_project_portable.${ext}"
    }
  }
}